{
  "apiVersion": "v1beta3",
  "kind": "LimitRange",
  "metadata": {
    "name": "my-limits",
    "namespace": "facebook-pmd"
  },
  "spec": {
    "limits": [
    {
      "type": "Pod",
      "max": {
        "memory": "2Gi",
        "cpu": "2",
      },
      "min": {
        "memory": "1Mi",
        "cpu": "250m"
      }
    },
    {
      "type": "Container",
      "max": {
        "memory": "2Gi",
        "cpu": "2",
      },
      "min": {
        "memory": "1Mi",
        "cpu": "250m"
      }
    },
    ],
  }
}

