{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"config",
      "namespace": "fb-pmd-allen",
      "labels":{
         "name":"config"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"config"
      },
      "template":{
         "metadata":{
	    "namespace": "fb-pmd-allen",
            "labels":{
               "name":"config"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"config",
                  "image":"xa.repo.ndp.com:5000/facebook_pmd/config:1.2",
                  "resources": {
                       "limits": {
                            "memory": "1Gi"
                       }
                  },
                  "env":[
                        {"name": "ZK_ADDRESS", "value": "172.30.10.185:42181"},
                        {"name": "database_url", "value": "jdbc:mysql://172.30.10.77:3306/pmdr-config-test?useUnicode=true&amp;characterEncoding=UTF-8"},
                        {"name": "database_username", "value": "root"},
                        {"name": "database_password", "value": "12354"}
                  ]
               }
            ]
         }
      }
   }
}
