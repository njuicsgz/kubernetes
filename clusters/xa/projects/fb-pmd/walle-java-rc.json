{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"walle-java",
      "namespace": "fb-pmd-allen",
      "labels":{
         "name":"walle-java"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"walle-java"
      },
      "template":{
         "metadata":{
         "namespace": "fb-pmd-allen",
            "labels":{
               "name":"walle-java"
            }
         },
         "spec":{
            "volumes": [
               {"name": "host-log", "hostPath": {"path": "/dianyi/logs/walle-java"}}
            ],
            "containers":[
               {
                  "name":"walle-java",
                  "image":"xa.repo.ndp.com:5000/facebook_pmd/walle-java:1.2",
                  "volumeMounts": [
                      {"name": "host-log", "mountPath": "/dianyi/log"}
                  ],
                  "env":[
                        {"name": "ZK_ADDRESS", "value": "172.30.10.185:42181"},
                        {"name": "LC_ALL", "value": "en_US.UTF-8"},
                        {"name": "LANG", "value": "en_US.UTF-8"},
                        {"name": "LANGUAGE", "value": "en_US:en"}
                  ],
                  "ports":[
                  ]
               }
            ]
         }
      }
   }
}
