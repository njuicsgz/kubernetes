{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"rdb-service",
      "namespace": "facebook-pmd",
      "labels":{
         "name":"rdb-service"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"rdb-service"
      },
      "template":{
         "metadata":{
	    "namespace": "facebook-pmd",
            "labels":{
               "name":"rdb-service"
            }
         },
         "spec":{
              "volumes": [
                {"name": "host-log", "hostPath": {"path": "/dianyi/logs/rdb"}}
            ],
            "containers":[
               {
                  "name":"rdb-service",
                  "image":"xa.repo.ndp.com:5000/facebook_pmd/rdb-services:v1.0.6",
                  "volumeMounts": [
                      {"name": "host-log", "mountPath": "/dianyi/log"}
                  ],
                  "env":[
                        {"name": "ZK_ADDRESS", "value": "172.30.10.185:2181"}
                  ],
                  "ports":[
                  ]
               }
            ]
         }
      }
   }
}
