{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"dubbo-monitor-svc",
      "namespace": "facebook-pmd",
      "labels":{
         "name":"dubbo-monitor-svc"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"dubbo-monitor-svc"
      },
      "template":{
         "metadata":{
	    "namespace": "facebook-pmd",
            "labels":{
               "name":"dubbo-monitor-svc"
            }
         },
         "spec":{
            "volumes": [
               {"name": "host-log", "hostPath": {"path": "/dianyi/logs/dubbo-monitor-svc"}}
            ],
            "containers":[
               {
                  "name":"dubbo-monitor-svc",
                  "image":"xa.repo.ndp.com:5000/facebook_pmd/dubbo-monitor-svc:v1.0.6",
                  "volumeMounts": [
                       {"name": "host-log", "mountPath": "/dianyi/app/walle/dubbo-monitor-svc/logs"}
                  ],
                  "env":[
                        {"name": "ZK_ADDRESS", "value": "172.30.10.185:2181"}
                  ],
                  "ports":[
		     {
                        "containerPort":8080,
                        "protocol":"TCP"
                     },
                     {
                        "containerPort":7070,
                        "protocol":"TCP"
                     },
                  ]
               }
            ]
         }
      }
   }
}
