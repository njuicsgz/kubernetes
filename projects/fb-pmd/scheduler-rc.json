{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "namespace": "facebook-pmd",
      "name":"scheduler",
      "labels":{
         "name":"scheduler"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"scheduler"
      },
      "template":{
         "metadata":{
	    "namespace": "facebook-pmd",
            "labels":{
               "name":"scheduler"
            }
         },
         "spec":{
            "volumes": [
                 {"name": "host-log", "hostPath": {"path": "/dianyi/logs/scheduler"}}
            ],
            "containers":[
               {
                  "name":"scheduler",
                  "image":"xa.repo.ndp.com:5000/facebook_pmd/scheduler:v1.0.6",
                  "volumeMounts": [
                        {"name": "host-log", "mountPath": "/dianyi/log"}
                   ],
                  "env":[
                        {"name": "ZK_ADDRESS", "value": "172.30.10.185:2181"}
                  ],
                  "ports":[
                  ]
               }
            ]
         }
      }
   }
}
